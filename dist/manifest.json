{
  "manifest_version": 2,
  "name": "test go links",
  "version": "0.0",
  "description": "manage and use non-secure go links easily",
  "icons": {
    "48": "images/icon@48.png",
    "1024": "images/icon@1024.png"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://go/*",
    "*://git/*",
    "*://learn/*",
    "*://docs/*",
    "*://edit.go.links/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "images/icon@48.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://edit.go.links/*"],
      "js": ["edit_page_data_injector.js"],
      "run_at": "document_start"
    }
  ]
}